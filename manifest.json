{
    "manifest_version": 2,
    "name": "PH Download!",
    "version": "1.1.1",
    "description": "A simple download video from Pornhub",
    "homepage_url": "https://github.com/vanbujhm/WebExtension-ph-load",
    "icons": {
        "48": "icons/ph-load.png",
        "96": "icons/ph-load@2x.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
		"downloads"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/ph-load-icon-16.png",
            "32": "icons/ph-load-icon-32.png"
        },
        "default_title": "Download video!"
    },
    "background": {
        "scripts": ["background.js"]
    }
}